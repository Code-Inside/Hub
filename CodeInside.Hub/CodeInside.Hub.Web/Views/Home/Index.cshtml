@model CodeInside.Hub.Web.ViewModels.HubViewModel

@{
    ViewBag.Title = Model.Name;
}
<section>
    <h2><strong>//</strong>&nbsp;Team</h2>

    <div class="row">
        @foreach (var person in Model.PersonsOfInterest)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <img width="300" height="200" alt="@person.Name" src="@Url.Content(person.Image)">
                    <div class="caption">
                        <h3>@person.Name</h3>
                        <p>@person.Description</p>
                        <p>
                            @foreach (var link in person.Links)
                            {
                                <a href="@link.Href" class="btn btn-xs btn-info">
                                    @link.Name
                                </a>
                            }
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<br>
